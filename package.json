{
  "name": "task-pdf-writer-v2",
  "version": "1.0.5",
  "description": "Writes task PDFs from markdowns",
  "main": "dist/build.js",
  "repository": "https://github.com/plumsirawit/task-pdf-writer-v2.git",
  "author": "Sirawit <plurm2545@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild build.ts --bundle --platform=node --target=node16 --packages=external --outfile=dist/build.js --format=esm --tsconfig=tsconfig.json && cp -a src dist",
    "dev": "node ./dist/build.js"
  },
  "bin": {
    "genpdf": "node ./dist/build.js"
  },
  "type": "module",
  "dependencies": {
    "@types/jsdom": "^20.0.1",
    "esbuild": "^0.17.5",
    "jsdom": "^21.1.0",
    "listr2": "^5.0.7",
    "node-fetch": "^3.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
